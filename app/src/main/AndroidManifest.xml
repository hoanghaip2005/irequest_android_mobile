<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Internet permission for API calls -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".IRequestApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Irequest"
        android:usesCleartextTraffic="true">

        <!-- Facebook Configuration -->
        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/facebook_app_id" />
        <meta-data
            android:name="com.facebook.sdk.ClientToken"
            android:value="@string/facebook_client_token" />

        <!-- Login Activity - Launcher -->
        <activity
            android:name=".LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Home Activity -->
        <activity
            android:name=".HomeActivity"
            android:exported="false" />

        <!-- Main Activity -->
        <activity
            android:name=".MainActivity"
            android:exported="false" />

        <!-- Work Activity -->
        <activity
            android:name=".WorkActivity"
            android:exported="false" />

        <!-- Chat Activity -->
        <activity
            android:name=".ChatActivity"
            android:exported="false" />

        <!-- Chat Detail Activity -->
        <activity
            android:name=".ChatDetailActivity"
            android:exported="false"
            android:parentActivityName=".ChatActivity" />

        <!-- Alerts Activity -->
        <activity
            android:name=".AlertsActivity"
            android:exported="false" />

        <!-- Account Activity -->
        <activity
            android:name=".AccountActivity"
            android:exported="false" />

        <!-- Security and Privacy Activity -->
        <activity
            android:name=".SecurityPrivacyActivity"
            android:exported="false"
            android:parentActivityName=".AccountActivity" />

        <!-- Personal Information Activity -->
        <activity
            android:name=".PersonalInformationActivity"
            android:exported="false"
            android:parentActivityName=".AccountActivity" />

        <!-- Calendar Activity -->
        <activity
            android:name=".CalendarActivity"
            android:exported="false"
            android:parentActivityName=".HomeActivity" />

        <!-- Payment Activity -->
        <activity
            android:name=".PaymentActivity"
            android:exported="false" />

        <!-- Requests Activity -->
        <activity
            android:name=".RequestsActivity"
            android:exported="false" />

        <!-- Department Activity -->
        <activity
            android:name=".DepartmentActivity"
            android:exported="false" />

        <!-- Add Process Activity -->
        <activity
            android:name=".AddProcessActivity"
            android:exported="false"
            android:parentActivityName=".ProcessManagementActivity" />

        <!-- Process Detail Activity -->
        <activity
            android:name=".ProcessDetailActivity"
            android:exported="false"
            android:parentActivityName=".ProcessManagementActivity" />

        <!-- Report Activity-->
        <activity android:name=".ReportActivity" />

        <!--Smart
        Analysis Activity-->
        <activity android:name=".SmartAnalysisActivity" />

        <!-- Process Management Activity -->
        <activity
            android:name=".ProcessManagementActivity"
            android:exported="false" />

    </application>

</manifest>