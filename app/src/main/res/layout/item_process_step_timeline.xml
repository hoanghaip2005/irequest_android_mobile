<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="8dp"
    android:paddingBottom="8dp">

    <!-- Timeline Line (vertical) -->
    <View
        android:id="@+id/timeline_line"
        android:layout_width="2dp"
        android:layout_height="match_parent"
        android:layout_marginStart="24dp"
        android:background="#CCCCCC" />

    <!-- Timeline Dot/Icon -->
    <View
        android:id="@+id/timeline_dot"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/ic_timeline_marker" />

    <!-- Content Card -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:layout_marginEnd="8dp"
        android:layout_toEndOf="@id/timeline_dot"
        app:cardCornerRadius="8dp"
        app:cardElevation="2dp"
        xmlns:app="http://schemas.android.com/apk/res-auto">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp">

            <!-- Step Number & Status Badge -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp">

                <TextView
                    android:id="@+id/tvStepNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bước 1"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="#666666" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/tvStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hoàn thành"
                    android:textSize="11sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:background="@drawable/bg_pill_green"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp" />

            </LinearLayout>

            <!-- Step Title -->
            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Khởi tạo yêu cầu"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#002C2C"
                android:layout_marginBottom="4dp" />

            <!-- Step Description -->
            <TextView
                android:id="@+id/tvDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tạo yêu cầu mới và điền thông tin cơ bản"
                android:textSize="14sp"
                android:textColor="#666666"
                android:layout_marginBottom="8dp" />

            <!-- Date & Assignee -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_clock"
                    android:tint="#999999" />

                <TextView
                    android:id="@+id/tvDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="01/12/2025"
                    android:textSize="12sp"
                    android:textColor="#999999"
                    android:layout_marginStart="4dp" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1" />

                <ImageView
                    android:id="@+id/ivAssignee"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/default_avatar"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tvAssignee"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Người phụ trách"
                    android:textSize="12sp"
                    android:textColor="#666666"
                    android:layout_marginStart="4dp"
                    android:visibility="gone" />

            </LinearLayout>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</RelativeLayout>