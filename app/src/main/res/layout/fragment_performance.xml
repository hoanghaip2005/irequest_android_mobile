<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/bg_light"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:rowCount="2">

            <com.google.android.material.card.MaterialCardView
                app:cardBackgroundColor="@color/card_bg_dark"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_margin="4dp"
                app:cardCornerRadius="8dp">
                <LinearLayout android:padding="12dp" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
                    <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
                        <ImageView android:src="@drawable/ic_medal" app:tint="@color/teal_main" android:layout_width="20dp" android:layout_height="20dp"/>
                        <Space android:layout_weight="1" android:layout_width="0dp" android:layout_height="wrap_content"/>
                        <TextView android:text="Xếp hạng" android:textColor="#B0BEC5" android:textSize="12sp" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <LinearLayout android:layout_marginTop="8dp" android:orientation="horizontal" android:gravity="bottom" android:layout_width="match_parent" android:layout_height="wrap_content">
                        <TextView android:text="↓ Giảm 1 hạng" android:textColor="#B0BEC5" android:textSize="10sp" android:layout_weight="1" android:layout_width="0dp" android:layout_height="wrap_content"/>
                        <TextView android:text="8" android:textColor="@android:color/white" android:textStyle="bold" android:textSize="22sp" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                app:cardBackgroundColor="@color/card_bg_dark"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_margin="4dp"
                app:cardCornerRadius="8dp">
                <LinearLayout android:padding="12dp" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
                    <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
                        <ImageView android:src="@drawable/ic_chart" app:tint="@color/teal_main" android:layout_width="20dp" android:layout_height="20dp"/>
                        <Space android:layout_weight="1" android:layout_width="0dp" android:layout_height="wrap_content"/>
                        <TextView android:text="Hiệu suất" android:textColor="#B0BEC5" android:textSize="12sp" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <LinearLayout android:layout_marginTop="8dp" android:orientation="horizontal" android:gravity="bottom" android:layout_width="match_parent" android:layout_height="wrap_content">
                        <TextView android:text="↑ 5%" android:textColor="@color/teal_main" android:textSize="10sp" android:layout_weight="1" android:layout_width="0dp" android:layout_height="wrap_content"/>
                        <TextView android:text="93/100" android:textColor="@android:color/white" android:textStyle="bold" android:textSize="22sp" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
            
            </GridLayout>

        <com.google.android.material.card.MaterialCardView
            android:layout_marginTop="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@android:color/white"
            app:strokeWidth="0dp"
            app:cardCornerRadius="12dp">
            
            <LinearLayout
                android:padding="16dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                
                <TextView android:text="Chỉ số hiệu suất (KPI)" android:textStyle="bold" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                
                <FrameLayout android:layout_marginTop="24dp" android:layout_width="match_parent" android:layout_height="wrap_content">
                    <ProgressBar
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="match_parent"
                        android:layout_height="8dp"
                        android:progress="50"
                        android:progressDrawable="@drawable/custom_progress_orange" />
                    <TextView
                        android:text="50%"
                        android:background="@drawable/bg_shadow_white"
                        android:padding="4dp"
                        android:textSize="10sp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="12dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </FrameLayout>

                <TextView android:text="Mục tiêu doanh số" android:textStyle="bold" android:layout_marginTop="16dp" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                <ProgressBar
                    android:layout_marginTop="8dp"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    android:progress="40"
                    android:progressTint="@color/teal_main"
                    android:progressBackgroundTint="#F0F0F0"/>

                <TextView android:text="Hoàn thành KPI" android:textStyle="bold" android:layout_marginTop="16dp" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                <ProgressBar
                    android:layout_marginTop="8dp"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    android:progress="80"
                    android:progressTint="#2196F3"
                    android:progressBackgroundTint="#F0F0F0"/>

                <TextView
                    android:layout_marginTop="16dp"
                    android:text="*Xét các thành tích khả năng tăng lương 5%"
                    android:textColor="#FF5252"
                    android:textSize="12sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <LinearLayout
            android:layout_marginTop="16dp"
            android:background="@android:color/white"
            android:padding="16dp"
            android:orientation="horizontal"
            android:weightSum="3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            
            <LinearLayout android:orientation="vertical" android:layout_weight="1" android:layout_width="0dp" android:layout_height="wrap_content">
                <TextView android:text="Kinh nghiệm" android:textSize="12sp" android:textColor="@color/text_secondary" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                <TextView android:text="3 năm" android:textStyle="bold" android:textSize="18sp" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout android:orientation="vertical" android:layout_weight="1" android:layout_width="0dp" android:layout_height="wrap_content">
                <TextView android:text="Tổng giờ làm" android:textSize="12sp" android:textColor="@color/text_secondary" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                <TextView android:text="421" android:textStyle="bold" android:textSize="18sp" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            </LinearLayout>
             <LinearLayout android:orientation="vertical" android:layout_weight="1" android:layout_width="0dp" android:layout_height="wrap_content">
                <TextView android:text="Tổng ca làm" android:textSize="12sp" android:textColor="@color/text_secondary" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                <TextView android:text="210" android:textStyle="bold" android:textSize="18sp" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>